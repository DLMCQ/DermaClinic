# Environment
NODE_ENV=production
DATABASE_MODE=cloud

# Server
PORT=3001
HOST=0.0.0.0

# Database
# For local mode: path to sql.js database file
# LOCAL_DB_PATH=./data/dermaclinic.db

# For cloud mode: PostgreSQL connection string
# Railway proporciona esta variable automáticamente, pero lo puedes sobrescribir aquí
DATABASE_URL=postgresql://user:password@host:5432/database

# JWT Secrets (CAMBIAR EN PRODUCCIÓN)
# Generar: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_SECRET=your-super-secret-access-key-min-64-chars-CHANGE-THIS-IN-PRODUCTION
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-64-chars-CHANGE-THIS-IN-PRODUCTION

# CORS (Cambiar a tu dominio)
CORS_ORIGIN=https://tu-dominio.railway.app

# Backups (cloud mode only)
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_PATH=/app/backups

# Uploads (cloud mode only)
UPLOADS_PATH=/app/uploads

# Logging
LOG_LEVEL=info
