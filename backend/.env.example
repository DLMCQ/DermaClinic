# Environment
NODE_ENV=development
DATABASE_MODE=local

# Server
PORT=3001
HOST=0.0.0.0

# Database
# For local mode: path to sql.js database file
LOCAL_DB_PATH=./data/dermaclinic.db

# For cloud mode: PostgreSQL connection string (provided by Railway)
# DATABASE_URL=postgresql://user:password@host:5432/database

# JWT Secrets
# IMPORTANT: Generate your own secrets using:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_SECRET=your-super-secret-access-key-min-64-chars-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-64-chars-change-this-in-production

# CORS
CORS_ORIGIN=*

# Backups (cloud mode only)
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_PATH=/app/backups

# Uploads (cloud mode only)
UPLOADS_PATH=/app/uploads
